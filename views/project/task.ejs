<%- include("../common/header") %>

  <div class="col-md-10" id="app">
    <div class="content-box-large">
      <div class="panel-heading">
        <div class="row mb-5">
          <div class="panel-title">現在登録中プロジェクトの一覧</div>
        </div>
      </div>
      <div class="panel-heading">
        <div class="row">
          <div class="col-6 mb-5">
            <p>検索キーワード</p>
            <input type="text" class="form-control">
          </div>
          <div class="col-6 mb-5">
            <p>検索キーワード</p>
            <input class="btn btn-primary" type="button" value="プロジェクトの検索">
          </div>
        </div>
      </div>
      <div class="panel-body">
        <table cellpadding="0" cellspacing="0" class="table table-bordered" id="example">
          <thead>
            <tr>
              <th>ID</th>
              <th>タスク名</th>
              <th>概要</th>
              <th>作業者</th>
              <th>開始日<br>終了日</th>
              <th>作成日<br>更新日</th>
              <th>編集</th>
              <th>スター★</th>
            </tr>
          </thead>
          <tbody>
            <% project.tasks.forEach((data, index) =>  { %>
            <tr>
              <td>
                <%- data.id %>
              </td>
              <td>
                <%- data.task_name %>
              </td>
              <td><%- data.task_description %></td>
              <td>
                <!-- userデータがnull出ない場合 -->
                <% if (data.user !== null) { %>
                (<%- data.user.id %>)<%- data.user.user_name %>
                <% } else { %>
                ー
                <% } %>
              </td>
              <td>
                ここには､タスク開始日を表示します｡<br>
                ここには､タスク終了日を表示します｡
              </td>
              <td>
                <small><%- data.formatted_created_at() %><br>
                <%- data.formatted_updated_at() %></small>
              </td>
              <td>
                <a class="btn btn-outline-info" href="/todo/detail/<%- data.id %>">編集</a>
              </td>
              <td><%- data.Stars.length %>個</td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

<%- include("../common/footer") %>
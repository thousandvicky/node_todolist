

<div class="container">

  <div class="row">
    <% projects.forEach((data, index) =>  { %>
      <div class="col-12">
        <p>プロジェクト名: <%- data.project_name %></p>
        <p>プロジェクト概要: <%- data.project_description %></p>
      </div>
      <div class="col-12">
        <% data.tasks.forEach((task) => { %>
          <p><%- task.task_name %></p>
          <p><%- task.id %></p>
        <% }) %>
      </div>

      <!-- userデータがnull出ない場合 -->
      <% if (data.user !== null) { %>
        <p>リーダー: <%- data.user.user_name %></p>
      <% } %>
    <% }) %>
  </div>
</div>
<%- include("../common/header") %>


<div class="container mt-5 mb-5">
  <div class="row px-5">
    <div class="content-box-large col-12 col-md-6 col-lg-6 col-xxl-6 offset-md-3 offset-lg-3 offset-xl-3 offset-xxl-3">
      <form action="/register/create" method="post">

        <div class="row">
          <div class="col-md-12 mb-3">
            <div class="form-group">
              <label for="user_name">お名前</label>
              <input value="<%= old("user_name") %>" id="user_name" type="text" name="user_name" class="form-control form-control-lg" placeholder="山田 太郎">
            </div>
          </div>
          <% if (errors("user_name").length > 0 ) { %>
          <div class="col-md-12">
            <!-- バリデーションエラー -->
            <p class="alert alert-danger"><%= errors("user_name") %></p>
          </div>
          <% } %>
        </div>

        <div class="row">
          <div class="col-md-12 mb-3">
            <div class="form-group">
              <label for="description">ひとこと</label>
              <textarea id="description" name="description" class="form-control form-control-lg"><%= old("description") %></textarea>
            </div>
          </div>
          <% if (errors("description").length > 0 ) { %>
          <div class="col-md-12">
            <!-- バリデーションエラー -->
            <p class="alert alert-danger"><%= errors("description") %></p>
          </div>
          <% } %>
        </div>

        <div class="row">
          <div class="col-md-12 mb-3">
            <div class="form-group">
              <label for="email">メールアドレス</label>
              <input value="<%= old("email") %>" id="email" type="text" name="email" class="form-control form-control-lg" aria-describedby="emailHelp" placeholder="Enter email">
            </div>
          </div>
          <% if (errors("email").length > 0 ) { %>
          <div class="col-md-12">
            <!-- バリデーションエラー -->
            <p class="alert alert-danger"><%= errors("email") %></p>
          </div>
          <% } %>
        </div>

        <div class="row">
          <div class="col-md-12 mb-3">
            <div class="form-group">
              <label for="password">パスワード</label>
              <input id="password" type="password" name="password" class="form-control form-control-lg" placeholder="Password">
            </div>
          </div>
          <% if (errors("password").length > 0 ) { %>
          <div class="col-md-12">
            <!-- バリデーションエラー -->
            <p class="alert alert-danger"><%= errors("password") %></p>
          </div>
          <% } %>
        </div>

        <div class="row">
          <div class="col-md-12 mb-3">
            <div class="form-group">
              <label for="password">確認用パスワード</label>
              <input id="password_confirmation" type="password" name="password_confirmation" class="form-control form-control-lg" placeholder="Password">
            </div>
          </div>
          <% if (errors("password_confirmation").length > 0 ) { %>
          <div class="col-md-12">
            <!-- バリデーションエラー -->
            <p class="alert alert-danger"><%= errors("password_confirmation") %></p>
          </div>
          <% } %>
        </div>
        <button type="submit" class="btn btn-primary">新規登録</button>
      </form>
    </div>
  </div>
</div>
</div>
</div>

<%- include("../common/footer") %>
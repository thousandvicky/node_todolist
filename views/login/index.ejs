<%- include("../common/header") %>
<div class="container mt-5 mb-5">
  <div class="row px-5">
    <div class="content-box-large col-12 col-md-6 col-lg-6 col-xxl-6 offset-md-3 offset-lg-3 offset-xl-3 offset-xxl-3">
      <form action="/login/authenticate" method="post">
        <div class="row">
          <div class="col-md-12 mb-3">
            <div class="form-group">
              <label for="email">メールアドレス</label>
              <input value="<%= old("email") %>" id="email" type="text" name="email" class="form-control form-control-lg" aria-describedby="emailHelp" placeholder="Enter email">
            </div>
          </div>

          <% if (errors("email").length > 0) { %>
          <div class="col-md-12">
            <!-- バリデーションエラー -->
            <p class="alert alert-danger"><%- errors("email") %></p>
          </div>
          <% } %>
        </div>

        <div class="row">
          <div class="col-md-12 mb-3">
            <div class="form-group">
              <label for="password">パスワード</label>
              <input id="password" type="password" name="password" class="form-control form-control-lg" placeholder="Password">
            </div>
          </div>

          <% if (errors("password").length > 0) { %>
          <div class="col-md-12">
            <!-- バリデーションエラー -->
            <p class="alert alert-danger"><%- errors("password") %></p>
          </div>
          <% } %>
        </div>
        <button type="submit" class="btn btn-primary">ログイン</button>
      </form>
    </div>
  </div>
</div>
<%- include("../common/footer") %>
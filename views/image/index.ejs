<%- include("../common/header") %>

<div class="col-md-10" id="app">
  <div class="content-box-large">
    <div class="panel-heading">
      <div class="row mb-5">
        <div class="panel-title">画像のアップロード履歴</div>
      </div>
    </div>
    <div class="panel-heading">
      <form action="" method="GET">
        <div class="row">
          <div class="col-6 mb-5">
            <p>検索キーワード</p>
            <input type="text" class="form-control" name="keyword">
          </div>
          <div class="col-6 mb-5">
            <p>検索キーワード</p>
            <input class="btn btn-primary" type="submit" value="プロジェクトの検索">
          </div>
        </div>
      </form>
    </div>
    <div class="panel-body">
      <div class="row">
        <% images.forEach((image, index) => { %>
        <div class="mb-5 col-sm-3 col-md-3 col-lg-3 col-xl-3">
          <div class="row">
            <div class="mb-5 col-sm-12 col-md-12 col-lg-12 col-xl-12">
              <p>
                <a href="<%- image.getShowImageUrl() %>">
                  <img src="<%- image.getShowImageUrl() %>" class="img-thumbnail">
                </a>
              </p>
            </div>
            <div class="mb-5 col-sm-12 col-md-12 col-lg-12 col-xl-12">
              <form action="/image/delete/<%- image.id %>" method="post" class="form-to-delete-image">
                <input type="hidden" name="image_id" value="<%- image.id %>">
                <input type="submit" class="btn btn-outline-danger" value="削除する">
              </form>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </div>
</div>

<%- include("../common/footer") %>